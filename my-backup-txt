

<?php
	if (!defined('_PS_VERSION_')) {
	    exit;
	}

	//use PrestaShop\PrestaShop\Core\Module\WidgetInterface;

	class banner extends Module 
	{
		public function __construct()
    	{
	        $this->name = 'banner';
	        $this->tab = 'front_office_features';
	        $this->version = '1.0.0';
	        $this->author = 'Lamin Jatta';
	        $this->need_instance = 0;
	        $this->ps_versions_compliancy = [
	            'min' => '1.6',
	            'max' => _PS_VERSION_
	        ];
	        $this->bootstrap = true;

	        parent::__construct();

	        $this->displayName = $this->l('Banner module');
	        $this->description = $this->l('Description of sales.');

	        $this->confirmUninstall = $this->l('Are you sure you want to uninstall?');

	        if (!Configuration::get('MYMODULE_NAME')) {
	            $this->warning = $this->l('No name provided');
	        }
	   	}

	   	//INSTALLATION FUNCTION
		public function install()
		{
			/*
			* Check that the multystore features are enabled, and if so, set the current context to shop
			* on this installation of Prestershop.
			*/
		    if (Shop::isFeatureActive()) {
		        Shop::setContext(Shop::CONTEXT_ALL);
		    }

			/*
			* first check that the module parent class is install or
			* check that the module can be attach to the left column hook or
			* check that the module can be attach the header hook
			* 
			*/
		    if (!parent::install() ||
		        !$this->registerHook('leftColumn') ||
		        !$this->registerHook('header') ||
		        !Configuration::updateValue('banner', 'my friend')
		    ) {
		        return false;
		    }

		    return true;
		}

		// UNINSTALLATION FUNCTION
		public function uninstall()
		{
		    if (!parent::uninstall() ||
		        !Configuration::deleteByName('banner')
		    ) {
		        return false;
		    }

		    return true;
		}

		public function getContent()
		{
			$html = '';
        $html .= '
            <form action="'.$_SERVER['REQUEST_URI'].'" method="post" class="bannerForm">
                <div class="panel">
                    <div class="panel-heading">'.$this->1('Settings').'</div>
        ';

        $html .= '
			<div class="form-group">
				<label class="control-label col-lg-3">'.$this->1('My Field')'</label>
				<div class="col-lg-6">
				<input type="email" name="user_email" placeholder="Enter your email" />
				</div>
			</div>
        ';

		$html .= '';

        $html .= '
                </div>
            </form> 
        ';

		}

		// THE HOOK THAT ENABLES TO DISPLAY CONTENT
		public function hookHeader($params){
			return 'CHECK BANNER';
		}


	}





	<div class="panel">
	<form action="'.$_SERVER['REQUEST_URI'].'" method="post" class="bannerForm">
	<div class="panel">
        <div class="panel-heading"> {l s='Banner Lamin Settings' mod='bannerlamin'}</div>
		<div class="form-group">
			<div class="form-row">
